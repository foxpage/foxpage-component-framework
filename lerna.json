{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "package-lock.json"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "push": false,
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*"
  ]
}